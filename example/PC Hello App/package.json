{
  "name": "mimik-sample-app",
  "productName": "mimik Sample App",
  "description": "mimik Sample App demonstrating mimik container manager",
  "version": "1.0.0",
  "private": true,
  "author": "mimik technology inc. <info@mimik.com> (https://mimik.com)",
  "copyright": "Â© 2018, mimik technology inc.",
  "homepage": "https://mimik.com",
  "main": "app/background.js",
  "build": {
    "appId": "com.mimik.sample-app",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraFiles": [
      {
        "from": "resources/containers/",
        "to": "containers/"
      }
    ],
    "directories": {
      "buildResources": "resources"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "executableName": "MimikSampleApp"
    },
    "publish": null
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "preunit": "webpack --config=build/webpack.unit.config.js --env=test --display=none",
    "unit": "electron-mocha temp/specs.js --renderer --require source-map-support/register",
    "test": "npm run unit",
    "start": "node build/start.js",
    "release": "npm test && webpack --config=build/webpack.app.config.js --env=production && electron-builder",
    "package": "webpack --config=build/webpack.app.config.js --env=production && electron-builder"
  },
  "dependencies": {
    "eslint": "^4.17.0",
    "fs-jetpack": "^1.2.0",
    "npm": "^5.7.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.39",
    "@babel/preset-env": "^7.0.0-beta.39",
    "babel-eslint": "^8.2.1",
    "babel-loader": "^8.0.0-beta.0",
    "babel-plugin-transform-object-rest-spread": "^7.0.0-beta.3",
    "chai": "^4.1.2",
    "css-loader": "^0.28.9",
    "electron": "1.8.2",
    "electron-builder": "^19.56.0",
    "electron-mocha": "^5.0.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "mocha": "^5.0.0",
    "source-map-support": "^0.5.3",
    "spectron": "^3.8.0",
    "style-loader": "^0.20.1",
    "webpack": "^3.10.0",
    "webpack-merge": "^4.1.1",
    "webpack-node-externals": "^1.6.0"
  }
}
